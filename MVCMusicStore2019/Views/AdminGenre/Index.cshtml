@using MVCMusicStore2019.ViewModels
@model IEnumerable<MVCMusicStore2019.ViewModels.MusicModel.GenreDisplayViewMOdel>


<h2>流派系统管理 @ViewBag.Title 页面</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        @ViewBag.Title 列表
    </div>
    <table class="table table-striped">
        <tr>
            <td>@Html.DisplayNameFor(model => model.OrderNumber)</td>
            <td>@Html.DisplayNameFor(model => model.Name)</td>
            <td>@Html.DisplayNameFor(model => model.Description)</td>
            <th></th>
        </tr>
        @if (Model == null)
        {
            <tr><td colspan="3" class="text-center">没有用户列表数据</td></tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    @Html.HiddenFor(modelItem => item.Id)
                    <td>@Html.DisplayFor(modelItem => item.OrderNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        <div>

                            @using (Html.BeginForm("Delete", "AdminGenre", new { id = item.Id }))

                            {
                                @Html.ActionLink("编辑", "CreaOrEdit", new { id = item.Id }, new { @class = "btn btn-primar btn-xs" })

                                <button class="btn btn-danger btn-xs" onclick="JavaScript: return confirm('确定要删除吗？')" type="submit">
                                    删除
                                </button>
                            }


                        </div>


                    </td>
                </tr>
            }
        }

    </table>
</div>
@Html.ActionLink("新建", "CreaOrEdit", null, new { @class = "btn btn-primary" })
@Html.ActionLink("取消", "Index", "Home", null, new { @class = "btn btn-default" })