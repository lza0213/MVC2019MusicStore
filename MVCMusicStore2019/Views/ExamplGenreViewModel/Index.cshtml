

@using MVCMusicStore2019.ViewModels
@model IEnumerable<MVCMusicStore2019.ViewModels.MusicModel.AlbumViewModel>

@{ViewBag.Title = "Search";}

<h2>流派</h2>

<table class="table table-condensed table-striped">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>


    </tr>
    @if (Model == null)
    {
        <tr><td colspan="3" class="text-center">没有用户列表数据</td></tr>
    }

    else
    {
        foreach (var item in Model)
        {
            <tr>
                @Html.HiddenFor(modelItem => item.Id)
                <td>@Html.HiddenFor(modelItem => item.Name)</td>
                <td>@Html.HiddenFor(modelItem => item.Description)</td>
                <td>
                    @using (Html.BeginForm("Delete", "AdminArtust", new { id = item.Id }))
                    {
                        @Html.ActionLink("编辑", "CreateOrEdit", new { id = item.Id }, new { @class = "btn btn-primar btn-xs" })
                        <button class="btn btn-danger btn-xs" type="submit">
                            删除

                        </button>

                    }
                </td>
            </tr>
        }
    }
</table>
